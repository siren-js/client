{
  "name": "@siren-js/client",
  "version": "0.1.0",
  "description": "Client class for communicating with Siren APIs",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run compile && npm run lint && npm run format:check && npm test",
    "compile": "tsc --project tsconfig.build.json",
    "compile:watch": "npm run compile -- --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "test": "jest --env=jsdom && jest --env=node",
    "test:jsdom": "jest --env=jsdom",
    "test:node": "jest --env=node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siren-js/client.git"
  },
  "keywords": [
    "API",
    "HATEOAS",
    "hypermedia",
    "REST",
    "RESTful",
    "Siren"
  ],
  "author": "Dillon Redding",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siren-js/client/issues"
  },
  "homepage": "https://github.com/siren-js/client#readme",
  "dependencies": {
    "@siren-js/core": "^0.3.1",
    "cross-fetch": "^3.1.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "preset": "ts-jest"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  }
}

{
  "name": "@siren-js/client",
  "version": "0.5.0",
  "description": "Client class for communicating with Siren APIs",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:lib",
    "build:doc": "typedoc ./src",
    "build:lib": "npm run clean && npm run compile && npm test && npm run lint && npm run format:check",
    "clean": "rimraf dist",
    "compile": "tsc --project tsconfig.build.json",
    "compile:watch": "npm run compile -- --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siren-js/client.git"
  },
  "keywords": [
    "API",
    "HATEOAS",
    "hypermedia",
    "REST",
    "RESTful",
    "Siren"
  ],
  "author": "Siren.js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siren-js/client/issues"
  },
  "homepage": "https://github.com/siren-js/client#readme",
  "dependencies": {
    "@web-std/file": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.0",
    "cross-fetch": "^3.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^29.3.1",
    "nock": "^13.0.11",
    "prettier": "2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}
